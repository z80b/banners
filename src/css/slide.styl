.bf-actions-slide
  position relative
  display block
  float left
  width 300px
  height 100%
  padding 0
  margin 0
  border solid 10px #000
  box-sizing border-box
  background-color #f93c00
  color #fff
  text-align left
  opacity 1
  filter grayscale(100%)
  transition .5s all ease
  cursor default

  &__inner
    opacity 0
    transition: 1s all ease

    .initialized &
      opacity 1

  &.active
    filter grayscale(0)

    &[href]
      cursor pointer

    &:hover
      opacity .5
      color #fff


  &__date, &__title, &__discount
    position absolute
    left 20px
    z-index 2

  &__date, &__title  
    font-size 2.2em
    font-weight 500

  &__title
    top 6.5em

  &__date
    top 19px

  &__discount
    font-size 7.2em
    font-weight 700
    top 50px

  &__image
    position absolute
    bottom -10px
    right -10px
    max-width 50%
    max-height 20em
    z-index 1

@media (max-width: 520px)
  .bf-actions-slide
    &__date, &__title
      font-size 1.6em

    &__discount
      font-size 5.3em