.lp-awards
    &__title
        color #f0d382
        font-size 68px
        font-weight 700
        text-align center

    &__tabs
        text-align center
        padding 55px 0 0
        font-size 0
        
        &-switcher
            display none
            
        &-contents
            position relative
        
        &-content
            overflow hidden
            relative top 0 width 100%
            box-sizing border-box
            transition .5s opacity ease
            
            ../-switcher:checked + &
                position relative
                height auto
                opacity 1
                overflow inherit
            
            &::after
                content ''
                display block
                absolute top -19px width 35px height 35px
                background-color inherit
                border inherit
                border-width 1px 1px 0 0                
                transform rotateZ(-45deg)
                margin 0 0 0 -17px
                
                .lp-page__bonus&
                    [data-contents-count="3"] &
                        left 16.5%
                        
                    [data-contents-count="1"] &
                        left 50%
                
                ../--blacklabel&
                    [data-contents-count="3"] &
                        left 50%
                    
                ../--game&
                    [data-contents-count="3"] &
                        left 83.5%
                    
    &-tab
        display inline-block
        width 33%
        border-left solid 1px #2f2f2f
        vertical-align top
        padding 0 0 55px
        
        &:first-child
            border-left none
            
        &__title
            @extends $block-title
            font-size 24px
            padding 42px 0 18px
            
        &__body
            min-height 208px
            position relative
            padding 0 0 40px
            
        &__text
            font-size 16px
            font-weight 500
            line-height 1.6
            color #a7a7a7
            padding 0 40px
            
        &__link
            absolute left 0 bottom 0 width 100%
            font-size 14px
            font-weight 500
            line-height 1.4
            color #fff
            text-decoration underline solid #404040
            cursor pointer
            transition .5s all ease
            
            &:hover
                color darken(#fff, 20%)
            
        &__image
            size 210px 210px
            margin 0 auto
            background 50% 50% no-repeat
            background-size auto
            
    &__actions
        width 100%
        font-size 0
        text-align center
        
        &-button
            @extends $button
        
        &-description
            font-size 13px
            font-weight 500
            line-height 1.6
            color #777
            text-align center
            
        &-block
            padding 65px 0 45px
        
    &__action
        display inline-block
        width 33%
        text-align center
        vertical-align top
        
        &-percent
            font-size 96px
            font-weight 400
            line-height 1
            color #fff
            padding 26px 0 18px
            
        &-description
            font-size 16px
            font-weight 500
            line-height 1.6
            color #a7a7a7
            text-align center
            min-height 100px
            padding 0 2.5em
                
.lp-game
    &__title
        font-size 2.4em
        font-weight 600
        line-height 1.2
        letter-spacing 0.26px
        text-align center
        color #fff
        margin 0
        display none
        
        &-wrapper
            padding  5.6em 0 1.8em
            box-sizing border-box
            height 16em
        
        for step in 0 1 2
            &--{step}
                [data-step={'"'+step+'"'}] &
                    display block
        
    &__slider
        @extends $clear-block
        position relative
        width 100%
        margin 0
        overflow hidden
        
        &-track
            @extends $clear-block
            transition .5s transform ease
            display table
            width 400%
            white-space nowrap
            for step in 0 1 2 3
                [data-step={'"'+step+'"'}] &
                    transform translateX(-25% * step)
                    
        &-dots
            @extends $clear-block
            width 100%
            text-align center
            padding 2em 0
            
        &-dot
            size .8em .8em
            margin 0 .4em
            display inline-block
            background-color #9c0a0d
            border-radius 50%
            
            for step in 0 1 2 3
                &--{step}
                    [data-step={'"'+step+'"'}] &
                        background-color #ffe49a
                        
        &-button
            absolute top 0 height 82% width 4em
            padding 0
            background 50% 50% no-repeat
            border none
            outline none
            display none
            cursor pointer
            transition .5s all ease

            .not-touch &
                display block

            &.element-hidden
                .not-touch &
                    display none
            
            &:hover
                opacity .8
            
            &--next
                background-image inline-image('imgs/slider-next-arrow.svg')
                right 4em
                
                [data-step="3"] &
                    display none
                
                &:hover
                    right 3.8em
                
            &--prev
                background-image inline-image('imgs/slider-prev-arrow.svg')
                left 4em
                
                [data-step="0"] &
                    display none
                    
                
                &::after
                    [data-step="3"] &
                        content "Посмотреть ответы"
                        font-size 1.4em
                        font-weight 500
                        line-height 1.2
                        margin 0
                        display block
                        absolute top 47% left 3em
                        color #888
                        text-align left
                        
                &:hover
                    left 3.8em
        
    &__slide
        display table-cell
        width 25%
        vertical-align top
        padding 0
        box-sizing border-box
        
        &-body
            @extends $clear-block
            font-size 1em

        &--result
            margin 0
            padding 0
            background-color #fff
            border solid 7px #ffd568
            box-sizing border-box
            
        &-result
            absolute bottom 30px left 70px right 70px
            background-color #fff
            box-shadow 1px 1px 3px 0 #0000001f
            padding 30px
            font-size 14px
            font-weight 500
            line-height 18px
            opacity 0
            transition .5s opacity ease 1s
            
            .lp-game__slide-part--success &
                opacity 1
                
            &-title, &-text
                display block
                white-space normal
        &-image
            display block
            box-sizing border-box

        &-part
            position relative
            display block
            box-sizing border-box
            size 50% auto
            padding 0 2%
            margin 0
            float left
            cursor pointer
            perspective 1000px
            
            &::before, &::after
                content ''
                display block
                opacity 0
                transition .5s all ease
            
            &::before
                absolute top 50% left 50% width 148px height 148px
                margin -64px 0 0 -64px
                background #000000b3 inline-image('https://a.lmcdn.ru/files/cms/palec_beliy.svg') 50% 50% no-repeat
                background-size auto 75px
                border-radius 50%
                transform rotateY(90deg)

                @media (max-width: 580px)
                    size 10em 10em
                    margin -5em 0 0 -5em
            
            &::after
                box-sizing border-box
                absolute top 0 left .8em right .8em
                size auto 100%
                border solid 7px #fff
                box-shadow inset 0 0 10px 0px rgba(#000, 0.3)
                
            &:hover::after
                opacity 1
                
            &:hover::before
                .lp-game-begining &
                    opacity 1
                    transform rotateY(0)
            
        &-image
            display block
            width 100%
            
    &__result
        box-sizing border-box
        width 100%
        padding 5% 0 0
        
        &-icon
            display block
            size 100% 6em
            background 50% 50% no-repeat
            background-size contain
            margin 0 auto
            
            ~/__result--success &
                background-image inline-image('https://a.lmcdn.ru/files/cms/finger-up.svg')
                
            ~/__result--fail &
                background-image inline-image('https://a.lmcdn.ru/files/cms/finger-down.svg')
                
        &-text
            font-size 1.2em
            font-weight 500
            line-height 1.2
            color #111
            padding 4% 4% 0
            
            span
                white-space pre-line
        
        &-text, &-content
            display none
            text-align center
            
            &--success
                .lp-game__result--success &
                    display block
                    padding 2% 0
                    
            &--fail
                .lp-game__result--fail &
                    display block
                    padding 2% 0
                    
        &-dots
            padding: 1em 0
            
        &-dot
            display inline-block
            size .8em .8em
            background-color #fc678e
            border-radius 50% 50%
            margin 0 .4em
            
            &--success
                background-color #6ce992
                
        &-button
            display inline-block
            font-size 13px
            font-weight 500
            line-height 48px
            text-align center
            width 200px
            border solid 1px #888
            color #111
            cursor pointer
            transition .5s all ease
            
            &:hover
                background-color lighten(#eee, 10%)
        
    &__actions
        display block
        text-align center
        
        &-button
            @extends $button
            display inline-block
            margin 25px auto
            
    &__description
        font-size .8em
        font-weight 500
        line-height 1.6
        color #777
        padding 3.2em 1.6em
        
        
.lp-promo-form
    &__email
        .field-error &
            border-color red !important
        
    &__form-error
        padding 10px 0 0
        color #111
        
    &__footer
        display block
        clear both
        text-align center
        padding 50px 0 0

        @media (max-width: 580px)
            padding 0
        
        &-link
            display none
            font-size 14px
            font-weight 500
            line-height 1
            text-decoration underline