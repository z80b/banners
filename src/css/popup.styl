  .ny-panorama-popup
    absolute top 0 left 0
    size 140px auto
    padding 10px
    background-color #fff
    z-index 2
    white-space normal
    display none

    &__image
      display block
      width 100%

    &__title
      font-size 8px
      font-weight 700
      color #000
      padding 10px 0 0

    &__text
      font-size 8px
      font-weight 500
      color #000
      padding 10px 0

    &__button
      display block
      font-size 8px
      font-weight 700
      line-height 24px
      text-align center
      color #000
      background-color #f0d382
      cursor pointer