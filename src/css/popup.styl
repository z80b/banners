  .ny-panorama-popup
    absolute top 0 left 0
    size 140px 214px
    padding 32px 10px 24px 10px
    box-sizing border-box
    background-color #fff
    z-index 2
    white-space normal
    transition .3s transform ease
    transform-origin 0 0
    transform scale(0)
    box-shadow 0px 0px 15px 0px #000

    &--opened
      transition .5s transform ease
      transform scale(1)

    [data-direction=up] &
      transform-origin 0 100%
      top auto
      bottom 0

    &__image
      display block
      height 65px

    &__title
      font-size 8px
      font-weight 700
      color #000
      padding 10px 0 0

    &__text
      font-size 8px
      font-weight 500
      color #000
      padding 10px 0

    &__button
      absolute bottom 10px left 10px right 10px
      display block
      font-size 8px
      font-weight 700
      line-height 24px
      text-align center
      text-decoration none
      color #000
      background-color #f0d382
      cursor pointer
      transition .5s background-color ease

      &:hover
        background-color darken(#f0d382, 20%)