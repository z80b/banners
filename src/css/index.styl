.panorama-banner
  &__body
    width 100%
    height 600px

    .psv-canvas
      width 100%
      height 600px

  &__marker
    width 20px
    height 20px
    border solid 2px #fff
    border-radius 50%
    text-align center
    line-height 20px
    color #fff
    transition .5s transform ease

    .hovered &
      transform scale(1.1)


    &-html
      display none