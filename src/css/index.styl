@import 'components/*.styl'
@import 'quiz.styl'
@import 'promo-form.styl'

body
    scroll-behavior smooth
    
body > .footer
    margin 0
    
.unipop__item_bf
    display none
    
.lp-page
    background-color red
    width 100%
    
    &__content
        width 960px
        margin 0 auto
    
        .widescreen &
            width 1206px

.lp-quiz
  position relative
  font-size 2.6vw
  width 100%
  margin auto

  &__background
    position absolute
    left 0
    bottom 0
    width 100%
    height 100%
    background 50% 60% no-repeat
    background-image url(//a.lmcdn.ru/files/cms/gold-pattern-2.jpg)
    background-size 756px 320px
    z-index 1

    &::before
        content ''
        absolute top 0 left 50% width 300px height 100%
        display block
        background 50% 57% repeat-x
        background-image url(//a.lmcdn.ru/files/cms/golden-stars.png)
        background-size auto 102px
        transform translateX(-460px)

    &::after
        content ''
        absolute top -25px left 50% width 300px height 100%
        display block
        background 50% 57% repeat-x
        background-image url(//a.lmcdn.ru/files/cms/golden-stars.png)
        background-size auto 102px
        transform translateX(160px)



    @media (max-width: 584px)
      display none

  &__wrapper
      background-color #c71b1e
      position relative

  .widescreen &
      font-size 16px
      width 800px