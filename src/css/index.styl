@import './slider.styl'
@import './promo-button.styl'

.ibanner__promocode-hint
  position absolute
  top -90000000px

.bf-actions
  display block
  min-width 960px
  max-width 1206px
  margin 0 auto
  font-size 10px
  font-weight 500
  line-height normal
  color #fff
  text-align center
  padding 0
  background 50% 50% no-repeat
  background-image url(https://a.lmcdn.ru/files/cms/blackfriday.png)


  &__description
    font-size 12px
    font-weight 400
    line-height 16px
    text-align left
    padding 24px 0
    color #c2c2c2

  &__conditions
    display block
    font-size 1em
    font-weight 500
    text-decoration none
    color #808080
    transition .5s all ease

    &::after
      content '?'
      border solid 1px #808080
      border-radius 50%
      display inline-block
      width 1em
      height 1em
      margin-left .5em
      //transition .5s all ease

    &:hover
      color #fff

      &::after
        border-color #fff

  &__title
    font-size 3.6em
    font-weight 500
    margin 1.2em 0 .4em
    display inline-block

  &__promocode
    font-size 1em
    font-weight 500
    cursor pointer
    opacity 1
    transition .5s opacity ease

    &-block
      display inline-block

  &__content
    widows 100%
    position relative
    
  &__slider
    white-space nowrap

@media (max-width: 520px)
  .bf-actions

    &__title
      font-size 1.8em

      span
        display block

    &__promocode
      font-size 2.4em
