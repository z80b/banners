@import './slider.styl'
@import './promo-button.styl'

.width-wrapper.js-width-wrapper-banner-catalog,
.widescreen .width-wrapper.js-width-wrapper-banner-catalog {
  width 100%
  padding 0 20px 0 0
}

.ibanner__promocode-hint
  position absolute
  top -90000000px

.bf-actions
  display block
  font-size 10px
  font-weight 500
  line-height normal
  color #fff
  text-align center
  padding 0
  background 50% 50% no-repeat
  background-image url('https://a.lmcdn.ru/files/cms/blackfriday.png')
  background-size 58% auto
  background-color #000

  &__description
    font-size 12px
    font-weight 400
    line-height 16px
    text-align left
    padding 24px 0
    color #c2c2c2
    white-space normal

    @media (max-width: 520px)
      display none

  &__info
    position absolute
    right -1.7em
    top .5em
    display none
    font-size .5em
    font-weight 500
    text-decoration none
    size 1em 1em
    color #fff
    border solid 1px #fff
    border-radius 50%
    transition .5s all ease

    @media (max-width: 520px)
      display block

  &__title
    position relative
    font-size 3.2em
    font-weight 500
    margin 1em 0 .3em
    display inline-block

  &__promocode
    font-size 1em
    font-weight 500
    cursor pointer
    opacity 1
    transition .5s opacity ease

    &-block
      display inline-block

  &__content
    max-width 1206px
    min-width 720px
    margin 0 auto
    position relative

    @media (max-width: 520px)
      min-width auto
    

  &__slider
    white-space nowrap

@media (max-width: 520px)
  .bf-actions

    &__title
      font-size 2.8em

    &__promocode
      font-size 1em
      display inline-block
